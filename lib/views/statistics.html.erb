<!DOCTYPE html>
<html lang="en" class="mdl-js">
<%= render "header" %>
<body>
  <section id="introduction">
    <div class="container">
      <div class="row fill-viewport align-items-center justify-content-center">
        <div class="col-12 col-md-6">
          <div class="row">
            <div class="col-md-auto">
              <h1 class="text-white title"><%= I18n.t(:name_app)%></h1>
            </div>
          </div>
          <p class="lead text-white-70"> Top of Players:</p>
          <hr class="mb-4">
          <div class="table-responsive-md scores">
            <table class="table table-striped table table-sm">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Level</th>
                  <th scope="col">Attempts Left</th>
                  <th scope="col">Hints Left</th>
                  <th scope="col">Date</th>
                </tr>
              </thead>
              <tbody>
                <% stats.each_with_index do |record, index|%>
                  <%= "<tr><th scope='row'>#{index+1}</th>" %>
                  <%= "<td>#{record[:name]}</td>" %>
                  <%= "<td>#{record[:difficulty]}</td>" %>
                  <%= "<td>#{record[:attempts_used]}/#{record[:attempts_total]}</td>" %>
                  <%= "<td>#{record[:hints_used]}/#{record[:hints_total]}</td>" %>
                  <%= "<td>#{record[:date]}</td></tr>" %>
                <% end %>
              </tbody>
            </table>
          </div>
          <hr class="mb-4">
          <a class="btn btn-primary btn-lg" href="/" role="button">
                <%= I18n.t(:home_page) %>
          </a>
        </div>
       </div>
    </section>
  </body>
</html>